---
const { data } = Astro.props;
---

<div
  class="relative w-full flex items-center justify-center max-[690px]:px-6 px-4 py-4"
>
  <svg
    data-direction="top"
    data-variant="full-screen"
    class="absolute pointer-events-none z-10 text-[#ddb3ff] dark:text-neutral-600 top-0 w-full"
    width="100%"
    height="1"
    viewBox="0 0 100 1"
    preserveAspectRatio="none"
    style="left:50%;transform:translateX(-50%);width:100vw"
    ><line
      x1="0"
      y1="0.5"
      x2="100"
      y2="0.5"
      stroke="currentColor"
      stroke-width="1"
      stroke-dasharray="6 6"
      vector-effect="non-scaling-stroke"></line></svg
  ><svg
    data-direction="bottom"
    data-variant="full-screen"
    class="absolute pointer-events-none z-10 text-[#ddb3ff] dark:text-neutral-600 bottom-0 w-full"
    width="100%"
    height="1"
    viewBox="0 0 100 1"
    preserveAspectRatio="none"
    style="left:50%;transform:translateX(-50%);width:100vw"
    ><line
      x1="0"
      y1="0.5"
      x2="100"
      y2="0.5"
      stroke="currentColor"
      stroke-width="1"
      stroke-dasharray="6 6"
      vector-effect="non-scaling-stroke"></line></svg
  >
  <div
    class="flex flex-col items-center justify-center w-full text-neutral-800 dark:text-neutral-200"
  >
    <img
      class="w-full h-48 sm:h-64 md:h-72 object-cover object-[50%_20%] rounded-[10px]"
      src={data.imagen}
      alt={`Imagen post: ${data.titulo}`}
    />
    <h1 class="text-center w-full text-lg md:text-xl my-4">
      {data.titulo}
    </h1>
    <div
      class="w-full flex flex-wrap sm:flex-row items-center justify-center sm:justify-between gap-x-3 sm:gap-x-1"
    >
      <a
        href="/blog"
        class="group flex items-center gap-1 select-none font-mono z-20 bottom-3 bg-background left-3 text-sm py-0.5 px-1 animate-in fade-in slide-in-from-bottom-2 duration-300"
      >
        Volver atr√°s <svg
          class="size-3 shrink-0 text-neutral-300 dark:text-neutral-700 group-hover:text-neutral-700 dark:group-hover:text-neutral-300 group-focus-visible:text-neutral-700 dark:group-focus-visible:text-neutral-300 -rotate-45 group-hover:-rotate-90 transition-all duration-300 group-focus-visible:-rotate-90"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M7 17L17 7M17 7H7M17 7V17"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path></svg
        >
      </a>
      <p
        class="select-none font-mono z-20 bottom-3 bg-background right-3 text-sm py-0.5 px-1 animate-in fade-in slide-in-from-bottom-2 duration-300"
      >
        # {data.indice}
      </p>
      <p
        class="select-none font-mono z-20 bottom-3 bg-background right-3 text-sm py-0.5 px-1 animate-in fade-in slide-in-from-bottom-2 duration-300"
      >
        {data.creado}
      </p>
    </div>
  </div>
</div>
