---
import Image from "astro/components/Image.astro";
import ButtonTheme from "../ui/ButtonTheme.astro";

const { data } = Astro.props;
---

<div
  class="relative w-full flex items-center justify-center max-[690px]:px-6 px-4 py-4"
>
  <svg
    data-direction="top"
    data-variant="full-screen"
    class="absolute pointer-events-none z-10 text-[#ddb3ff] dark:text-neutral-600 top-0 w-full"
    width="100%"
    height="1"
    viewBox="0 0 100 1"
    preserveAspectRatio="none"
    style="left:50%;transform:translateX(-50%);width:100vw"
    ><line
      x1="0"
      y1="0.5"
      x2="100"
      y2="0.5"
      stroke="currentColor"
      stroke-width="1"
      stroke-dasharray="6 6"
      vector-effect="non-scaling-stroke"></line></svg
  ><svg
    data-direction="bottom"
    data-variant="full-screen"
    class="absolute pointer-events-none z-10 text-[#ddb3ff] dark:text-neutral-600 bottom-0 w-full"
    width="100%"
    height="1"
    viewBox="0 0 100 1"
    preserveAspectRatio="none"
    style="left:50%;transform:translateX(-50%);width:100vw"
    ><line
      x1="0"
      y1="0.5"
      x2="100"
      y2="0.5"
      stroke="currentColor"
      stroke-width="1"
      stroke-dasharray="6 6"
      vector-effect="non-scaling-stroke"></line></svg
  >
  <div
    class="flex flex-col items-center justify-center w-full text-neutral-800 dark:text-neutral-200"
  >
    <Image
      class="animate-fade-in-fast w-full h-48 sm:h-64 md:h-72 object-cover object-[50%_20%] rounded-[10px]"
      src={data.imagen}
      alt={`Imagen post: ${data.titulo}`}
      width={693}
      height={433}
      sizes="
    (max-width: 640px) 100vw,
    (max-width: 1024px) 90vw,
    693px
  "
      widths={[320, 480, 640, 768, 960]}
      quality={72}
      format="webp"
      loading="eager"
      fetchpriority="high"
      decoding="async"
    />

    <h1 class="animate-fade-in text-center w-full text-lg md:text-xl my-4">
      {data.titulo}
    </h1>
    <div
      class="w-full flex flex-wrap sm:flex-row items-center justify-center sm:justify-between gap-x-3 sm:gap-x-1"
    >
      <a
        href="/blog"
        class="group animate-fade-in-slow flex items-center justify-center gap-1 mt-0.5 select-none font-mono z-20 bottom-3 bg-background left-3 text-center sm:text-start md:text-sm text-xs font-regular md:leading-6 leading-5 text-neutral-600 dark:text-neutral-400 animate-in fade-in slide-in-from-bottom-2 duration-300"
      >
        Volver al inicio <svg
          class="size-3 shrink-0 text-neutral-300 dark:text-neutral-700 group-hover:text-neutral-700 dark:group-hover:text-neutral-300 group-focus-visible:text-neutral-700 dark:group-focus-visible:text-neutral-300 -rotate-90 sm:-rotate-45 group-hover:-rotate-90 transition-all duration-300 group-focus-visible:-rotate-90"
          viewBox="0 0 24 24"
          fill="none"
          xmlns="http://www.w3.org/2000/svg"
          ><path
            d="M7 17L17 7M17 7H7M17 7V17"
            stroke="currentColor"
            stroke-width="2"
            stroke-linecap="round"
            stroke-linejoin="round"></path></svg
        >
      </a>
      <div class="flex items-center gap-x-3 animate-fade-in-slow">
        <span
          class="md:text-xs text-[10px] ml-3 text-neutral-800 dark:text-neutral-300"
        >
          <ButtonTheme showText={true} />
        </span><p
          class="select-none font-mono z-20 bottom-3 bg-background right-3 text-sm py-0.5 px-1 animate-in fade-in slide-in-from-bottom-2 duration-300"
        >
          # {data.indice}
        </p>
      </div>

      <p
        class="animate-fade-in-slow select-none font-mono z-20 bottom-3 bg-background right-3 text-sm py-0.5 px-1 animate-in fade-in slide-in-from-bottom-2 duration-300 sm:max-w-[150px] text-center"
      >
        {data.creado}
      </p>
    </div>
  </div>
</div>
